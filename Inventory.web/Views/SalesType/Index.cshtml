@using Inventory.Repository.Paging;
@using Inventory.ViewModel.Sales;
@model PaginatedList<SaleTypeListViewModel>
@{
    ViewData["Title"] = "Index";
}

<div class="row" >
    <div class="col-6">
        Add New Sales Type
        <a asp-action="Create" class="btn btn-primary">Add</a>
    </div>
    <div class="col-6">Search Here.....</div>
    <div class="row">
        <form asp-action="">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            SalesType Id
                        </th>
                        <th>
                            Title
                        </th>
                        <th>
                            Description
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SalesTypeId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem =>item.SalesTypeName)
                            </td>

                            <td>
                            @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                <a asp-route-id="@item.SalesTypeId" asp-action="Edit" class="btn btn-primary">Edit</a>
@*                                 <a asp-action="" class="btn btn-danger">Details</a>
 *@                                <a asp-route-id="@item.SalesTypeId" asp-action="Delete" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </form>
    </div>
</div>
